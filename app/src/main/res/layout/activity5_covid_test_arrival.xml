<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".Reason">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air travellers, please note the following:"
            android:textColor="#103C51"
            android:textStyle="bold"
            android:textSize="28sp"
            android:paddingBottom="5dp"/>
        <!-- Note -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="On arrival to Canada, you may be required to take a COVID-19 test. You are asked to register in advance for your COVID-19 test. Preregistration will speed up your testing experience."
            android:textColor="#5c5b58"
            android:paddingTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Travellers selected for testing must complete their arrival test as soon as possible. Follow any other instructions provided. More information on arrival testing is available at COVID-19: Travel, testing and borders."
            android:textColor="#5c5b58"
            android:paddingTop="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

        <!-- Empty space -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="300dp"/>
        <!-- Next Button -->

        <Button
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:backgroundTint="#2d79a4"
            android:onClick="clickEnter"
            android:text="Next"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>
